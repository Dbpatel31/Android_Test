<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditActivity">



       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Setup"
            android:textSize="25sp"
            android:textColor="#1A1A1A"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Complete Field below 1"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fullname"
            android:backgroundTint="@null"
            android:paddingHorizontal="10dp"
            android:paddingLeft="10dp"
            android:paddingVertical="15dp"
            android:layout_margin="20dp"
            android:inputType="text"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/emailtext"
        android:backgroundTint="@null"
        android:paddingHorizontal="10dp"
        android:paddingLeft="10dp"
        android:paddingVertical="15dp"
        android:layout_margin="20dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cal"
        android:backgroundTint="@null"
        android:paddingHorizontal="10dp"
        android:paddingLeft="10dp"
        android:paddingVertical="15dp"
        android:layout_margin="20dp"
        android:inputType="text"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree all terms and conditions"
            android:layout_marginLeft="18dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes i am 18+"
        android:layout_marginLeft="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"/>
        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:text="Next"/>
    </LinearLayout>
    </LinearLayout>
