<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PermissionActivity">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/map"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="vertical">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:maxLines="2"
             android:textSize="25sp"
             android:layout_marginTop="25sp"
             android:layout_gravity="center"
             android:text="Allow Access to Your\n         Location"
             android:padding="10dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:maxLines="2"
             android:textSize="15sp"
             android:layout_marginTop="25sp"
             android:layout_gravity="center"
             android:text="Discover nearby fitness events and\n group workouts happeing in your\n area. "
             android:padding="10dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:maxLines="2"
             android:textSize="15sp"
             android:layout_marginTop="10sp"
             android:layout_gravity="center"
             android:text="Find friends who are crushing their goals near you "
             android:padding="10dp"/>


     </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/donallow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't Allow"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:backgroundTint="@null"/>
            <Button
                android:id="@+id/allowbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:text="Allow"
                android:textColor="@color/white"
                android:background="@color/black"
                />
        </LinearLayout>

</LinearLayout>